{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "no-consecutive-blank-lines": false,
        "trailing-comma": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-unsafe-any": false,
        "quotemark": [
            true,
            "single"
        ],
        "whitespace": [
            true,
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-typecast",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "no-console": false,
        "arrow-parens": false,
        "no-bitwise": false,
        "variable-name": false,
        "max-line-length": false,
        "member-ordering": false,
        "no-conditional-assignment": false,
        "triple-equals": false,
        "curly": false,
        "one-variable-per-declaration": false,
        "no-string-throw": false
    }
}
